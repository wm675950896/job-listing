<div class="col-md-12">
  <h1>Job List</h1>
  <div class="group">
    <%= link_to("new job", new_job_path, class: "btn btn-primary pull-right") %>
  </div>
  <div class="dropdown clearfix pull-right">
    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
      排序
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
      <li>
        <%= link_to("按照薪资下限排序", jobs_path(:order => "by_lower_bound")) %>
      </li>
      <li>
        <%= link_to("按照薪资上限排序", jobs_path(:order => "by_upper_bound")) %>
      </li>
      <li>
        <%= link_to("按照发布时间", jobs_path) %>
      </li>
    </ul>
  </div>
  <table class="table table-boldered">
    <thead>
    <tr>
      <td>#</td>
      <td>title</td>
      <td>description</td>
      <td>time</td>
      <td>上限</td>
      <td>下限</td>
      <td>邮箱</td>
    </tr>
    </thead>
    <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td>#</td>
        <td><%= link_to(job.title, job_path(job)) %></td>
        <td><%= job.description %></td>
        <td><%= job.created_at %></td>
        <td><%= job.wage_upper_bound %></td>
        <td><%= job.wage_lower_bound %></td>
        <td><%= job.contact_email %></td>
        <td>
          <% if current_user == job.user %>
            <%= link_to("Edit", edit_job_path(job)) %>
            <%= link_to("Destroy", job_path(job), method: :delete) %>
          <% end %>
        </td>
      <% end %>
    </tr>
    </tbody>
  </table>
</div>